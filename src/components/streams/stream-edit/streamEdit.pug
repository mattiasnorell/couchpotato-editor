div(class="modal")
    div(class="modal-backdrop" @click="ok")
    div(class="modal-wrapper w-11/12 md:w-6/12")
        div(class="modal-body")
            div(class="modal-header") {{ title }}

            div(class="modal-content")
                div(class="w-full flex flex-wrap")
                    div(class="w-full md:w-1/3 px-4 text-left")
                        label() {{ $filters.translate('friendlyName') }}
                        input-text(:value="stream?.friendlyName" :placeholder="'VÃ¤lj grupp'")

                div(class="w-full flex flex-wrap mt-4")
                    div(class="w-full md:w-1/3 px-4 text-left")
                        label() {{ $filters.translate('group') }}
                        input-text(v-model:value="stream.customGroupName" :placeholder="`Defaultgruppen`" :usePlaceholderIfEmpty="true")

                div(class="w-full flex flex-wrap mt-4")
                    div(class="w-full md:w-1/3 px-4 text-left")
                        label() {{ $filters.translate('epgId') }}
                        input-text(v-model:value="stream.epgId" :placeholder="'Ej angivet'" :usePlaceholderIfEmpty="true")

                
                div(class="w-full flex flex-wrap mt-4")
                    div(class="w-full md:w-1/3 px-4 text-left")
                        label() {{ $filters.translate('customLogo') }}
                        input-text(v-model:value="stream.customLogo" :placeholder="'Standard'" :usePlaceholderIfEmpty="true")

                div(class="w-full flex flex-wrap mt-4")
                    div(class="w-full md:w-1/3 px-4 text-left")
                        label() {{ $filters.translate('timeshift') }}
                        input-text(v-model:value="stream.epgTimeshift" :placeholder="'0000'" :usePlaceholderIfEmpty="true")

            div(class="modal-footer")
                button(class="rounded-md bg-gray-500 px-4 py-2" @click="ok") Ok