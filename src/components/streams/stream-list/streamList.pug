div(class="w-full")
    div(class="flex")
        div(class="w-3/4")
            add-stream(@onAdd="addStream")
        
        div(class="w-1/4 text-right")
            button(class="rounded bg-gray-300 px-2 py-2" @click="openCatalogue") Visa streamkatalog


    table(class="table-auto w-full")
        tr
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5") {{ 'id' | translate }}
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell") {{ 'friendlyName' | translate }}
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell") {{ 'group' | translate }}
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell") {{ 'epgId' | translate }}
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell") {{ 'timeshift' | translate }}
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-right leading-5")
                button(v-if="false" @click="toggleFilter")
                    font-awesome-icon(icon="filter")

        tr(class="border-b border-gray-500" v-if="showFilter")
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5") 
                input(class="border-2 p-2 rounded w-full" placeholder="Filtrera på id")
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell")
                input(class="border-2 p-2 rounded w-full" placeholder="Filtrera på id")
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell")
                input(class="border-2 p-2 rounded w-full" placeholder="Filtrera på id")
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell")
                input(class="border-2 p-2 rounded w-full" placeholder="Filtrera på id")
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-left leading-5 hidden md:table-cell")
                input(class="border-2 p-2 rounded w-full" placeholder="Filtrera på id")
            th(class="px-4 py-4 whitespace-no-wrap text-sm text-right leading-5")
        
        table-empty-state(:title="'Inga streams tillagda'" :colspan="6" v-if="streams.length === 0")
        tbody(id="stream_container" v-if="streams.length > 0")
            stream-list-row(v-for="(stream, index) in streams" :key="uniqueId()" :stream="stream" @onRemove="removeStream(index)")