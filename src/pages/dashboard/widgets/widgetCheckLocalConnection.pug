div(class="w-full")
    div(class="rounded-md text-md flex items-center" v-if="isPending") 
        span(class="bg-green-500 rounded-full text-white w-10 h-10 flex items-center justify-center")
            font-awesome-icon(icon="spinner" spin)

    div(class="rounded-md text-md flex items-center" v-if="!hasConnectionError && !isPending") 
        span(class="bg-green-500 rounded-full text-white w-10 h-10 flex items-center justify-center")
            font-awesome-icon(icon="thumbs-up")
        span(class="ml-2") {{'localResourcesHasConnection' | translate}}

    div(class="rounded-md text-md"  v-if="hasConnectionError && !isPending") 
        div(class="flex items-center")
            span(class="bg-red-500 rounded-full text-white w-10 h-10 flex items-center justify-center")
                font-awesome-icon(icon="exclamation-triangle")
            div(class="ml-2 flex flex-wrap")
                span(class="w-full") {{'localResourcesNoConnection' | translate}}
                router-link(to="/settings" class="text-xs") {{'goToLocalResourceSettings' | translate}}