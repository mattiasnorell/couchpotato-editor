div(class="modal")
    div(class="modal-backdrop" @click="ok")
    div(class="modal-wrapper w-11/12 md:w-6/12")
        div(class="modal-body")
            div(class="modal-header") {{ title }}

            div(class="modal-content")
                img(:src="newPath")
                
                label(for="logoPathInput") Från url:
                input-text(id="logoPathInput" v-model:value="newPath" :placeholder="'Sökväg'")

                h2 Från fil:
                stream-logo-gallery(@onChange="onGalleryChange")

            div(class="modal-footer")
                button(class="btn" @click="close") {{ $filters.translate('cancel') }}
                button(class="btn ml-2" @click="onSetDefault") Använd standardlogo
                button(class="btn ml-auto" @click="ok") {{ $filters.translate('ok') }}